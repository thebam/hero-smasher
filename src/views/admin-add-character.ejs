                <body>
                                <h1>Hero Smasher</h1>
        <form method="post" id="frmAddCharacter" action="admin/add">
        Name:
        <input type="text" id="characterName" name="characterName" /><br/>
        Powers:
		<div id="powers">
		<div id="power">
        <input type="text" id="power" name="power" class="power" />
        Origin:
        <select id="origin" name="origin" class="origin">
        <option>Birth<option>
        <option>Science<option>
        <option>Alien<option>
        <option>Magic<option>
        </select>
        Level:
        <select id="level" name="level"  class="level">
        <option>1<option>
        <option>2<option>
        <option>3<option>
        <option>4<option>
        <option>5<option>
        <option>6<option>
        <option>7<option>
        <option>8<option>
        <option>9<option>
        <option>10<option>
        </select>
        Passable:
        <select id="passable" name="passable" class="passable">
        <option>true<option>
        <option>false<option>
        </select>
		</div></div>
		<input type="button" id="btnAddPower" value="+ power" /><br/>
        
        Traits:
		<div id="traits">
		<div id="trait">
        <input type="text" id="trait" name="trait" class="trait" />
		</div>
		</div>
		<input type="button" id="btnAddTrait" value="+ trait" /><br/>
        
        Bio:
        <textarea id="biography" name="biography"></textarea><br/>
        <input type="button" id="btnAddCharacter" value="ADD CHARACTER"/>

		<input type="text" id="allTraits" name="allTraits" />
		<input type="text" id="allPowers" name="allPowers" />

        </form>
