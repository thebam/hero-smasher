								<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
								<script>
								$('#btnAddPower').click(function(){
									$("#power").clone().appendTo("#powers");
								});
								$('#btnAddTrait').click(function(){
									$("#trait").clone().appendTo("#traits");
								});

								$('#btnAddCharacter').click(function(){

									var powers = '{"powers":[]}';
									var traits = '{"traits":[]}';

									var tempPowers = [];
									var tempOrigins = [];
									var tempLevels = [];
									var tempPassables = [];
									var tempTraits = [];

									$(".power").each(function(index,value){
										tempPowers.push($(value).val());
									});
									$(".origin").each(function(index,value){
										tempOrigins.push($(value).val());
									});
									$(".level").each(function(index,value){
										tempLevels.push($(value).val());
									});
									$(".passable").each(function(index,value){
										tempPassables.push($(value).val());
									});
									$(".trait").each(function(index,value){
										tempTraits.push($(value).val());
									});

									for(var x=0; x<tempPowers.length;x++){
										var powersObj = JSON.parse(powers);
										powersObj['powers'].push({ "power": "" + tempPowers[x] + "", "rank": ""+ (x+1) + "", "origin": "" + tempOrigins[x] + "", "level": "" + tempLevels[x] + "", "passable": ""+ tempPassables[x] +"" });
										powers = JSON.stringify(powersObj);
									}

									for(var y=0; y<tempTraits.length;y++){
										var traitsObj = JSON.parse(traits);
										traitsObj['traits'].push({ "trait": "" + tempTraits[y] + ""});
										traits = JSON.stringify(traitsObj);
									}

									
									$("#allTraits").val(traits);
									$("#allPowers").val(powers);
									document.getElementById("frmAddCharacter").submit();
								});
								

								</script>

