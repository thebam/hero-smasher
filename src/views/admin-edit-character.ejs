                <body>
                <div ng-app='characterApp'>
                <div ng-controller="CharacterCtrl">
                                <h1>Hero Smasher</h1>
        <form method="post" id="frmAddCharacter" action="admin/add">
        Name:
        <input type="text" id="characterName" name="characterName" /><br/>
        Powers:
		
		<div ng-repeat="power in powers">
        <div id={{power.id}} style="display:inline">
        <input type="text" ng-model="power.powerName" />
        Origin:
        <select ng-model="power.origin">
        <option>Birth<option>
        <option>Science<option>
        <option>Alien<option>
        <option>Magic<option>
        </select>
        Level:
        <select ng-model="power.level">
        <option>1<option>
        <option>2<option>
        <option>3<option>
        <option>4<option>
        <option>5<option>
        <option>6<option>
        <option>7<option>
        <option>8<option>
        <option>9<option>
        <option>10<option>
        </select>
        Passable:
        <select ng-model="power.passable">
        <option>true<option>
        <option>false<option>
        </select>
        <a href ng-click="powers.splice($index, 1)">remove</a>
		</div></div>
		<input type="button" ng-click="newPower($event)" id="btnAddPower" value="+ power" /><br/>
        
        Traits:
		<div id="traits">
		<div id="trait">
        <input type="text" id="trait" name="trait" class="trait" />
		</div>
		</div>
		<input type="button" id="btnAddTrait" value="+ trait" /><br/>
        
        Bio:
        <textarea id="biography" name="biography"></textarea><br/>
        <input type="button" id="btnAddCharacter" value="ADD CHARACTER"/>

{{powers}}
        </form>
        </div>
        </div>
