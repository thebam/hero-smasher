								<script>
                                angular.module('characterApp',[])
                                .controller('CharacterCtrl',function($scope){
                                    var counter = 0;
                                    $scope.powers = [{id:counter,powerName:'',origin:'Birth',level:'1',passable:'true'}];
                                    
                                    $scope.newPower = function($event){
                                        counter++;
                                        $scope.powers.push({id:counter,powerName:'',origin:'Birth',level:'1',passable:'true'});
                                    };
                                });
								
                                
								</script>

